 <section class="TodoSection">
        <div class="TodoSectionTitle">
          <p class="TodoSectionTitle-text"><%=section_title%></p>
          <%if hide_if_completed == false%>
            <p class="TodoSectionTitle-remainingcount"><%= todos.completed.count %>/<%=todos.count%></p>
          <%else%>
            <p class="TodoSectionTitle-remainingcount">0/<%=(todos.count - todos.completed.count)%></p>
          <%end%>
        </div>
        <ul>
        <% todos.all.each do |todo|%>
            <li class="TodoItem">
             <%if hide_if_completed == false%>
                <%if todo.completed%>
                   <input class="TodoItem-Checkbox" type = "checkbox" checked>
                <%else%>
                   <input class="TodoItem-Checkbox" type="checkbox">
                <%end%>
              <%else%>
                  <%if todo.completed == false%>
                    <input class="TodoItem-Checkbox" type = "checkbox">
                  <%end%>
              <%end%>
              <%if hide_if_completed == false%>
                <%if todo.completed%>
                  <p class="TodoItemText-striked"><%=todo.todo_text%></p>
                   <% if show_due_date%>
                    <p class="TodoItem-duedate"><%=todo.due_date.to_s(:short)%></p>
                    <%end%>
                    <a class="TodoItem-delete" "href=" javascript:void(0)">
                      <img src=<%=asset_path("image.PNG")%> width="15" height="15">
                    </a>
                 <%else%>
                     <%=todo.todo_text%>
                   <% if show_due_date%>
                    <p class="TodoItem-duedate"><%=todo.due_date.to_s(:short)%></p>
                    <%end%>
                    <a class="TodoItem-delete" "href=" javascript:void(0)">
                      <img src=<%=asset_path("image.PNG")%> width="15" height="15">
                    </a>

                 <%end%>
              <%else%>
                  <%if todo.completed == false%>
                    <%=todo.todo_text%>
                     <% if show_due_date%>
                        <p class="TodoItem-duedate"><%=todo.due_date.to_s(:short)%></p>
                        <%end%>
                    <a class="TodoItem-delete" "href=" javascript:void(0)">
                      <img src=<%=asset_path("image.PNG")%> width="15" height="15">
                    </a>
                <%end%>
               <%end%>


          </li>
        <%end%>
      </section>
