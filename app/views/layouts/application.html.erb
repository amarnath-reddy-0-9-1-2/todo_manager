<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
     <p class="UserHeader">
      TodoManager
      <%= link_to "Sign-Out", destroy_session_path, method: "delete" %>
     </p>
     <hr>
    <% end %>
    <% if flash[:error] %>
    <p class="Flash-error">
      <%=flash[:error] %>
    </p>
    <%end%>
    <%= yield %>
  </body>
</html>
